{
    auto_https off
}

localhost:80

route {
    reverse_proxy /api/* blog-docker_blog-backend_1:8081 {
        lb_policy header X-My-Header
	    header_up Host {http.reverse_proxy.upstream.hostport}
    }

    reverse_proxy /* blog-docker_blog-frontend_1:8080 {
        lb_policy header X-My-Header
	    header_up Host {http.reverse_proxy.upstream.hostport}
    }
}